# Environment Variables Template
# Copy this file to .env and fill in your own values
# DO NOT commit the actual .env file to version control

# Backend Configuration
BACKEND_URL=http://localhost:8080/api
BACKEND_PROD_URL=https://doorstep-app.onrender.com/api

# Database Configuration (Local Development)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=doorstep
DB_USER=root
DB_PASSWORD=password

# Database Configuration (Production - Render)
DB_PROD_HOST=your-mysql-host.render.com
DB_PROD_USER=your-db-user
DB_PROD_PASSWORD=your-db-password
DB_PROD_NAME=doorstep_prod

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PROD_URL=https://doorstep.netlify.app

# JWT Secret (Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=86400000

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# Mail Configuration (Optional)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Cloud Storage (Optional)
CLOUD_STORAGE_BUCKET=your-bucket-name
CLOUD_STORAGE_KEY=your-api-key

# Environment
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev
